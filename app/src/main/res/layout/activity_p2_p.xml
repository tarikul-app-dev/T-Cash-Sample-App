    <RelativeLayout
        android:id="@+id/rlayout_all_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="02dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Contacts"
            android:textColor="#000000"
            android:textSize="18dp"
            />

    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="02dp"
        android:background="#fff"
        >

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            />
    <RelativeLayout
        android:id="@+id/layout_p2p_amount"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="0dp"
        android:background="#fff"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/imgv_send_money"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src = "@drawable/ic_arrow_forward"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:hint="0"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/linearLayout"
                android:text="Available Balance:"
                android:textColor="#000000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txv_avail_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>



    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_p2p_amount_final"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="0dp"
            android:background="#fff"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#fff"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Amount"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="35dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Charge"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="110dp"
                        android:textStyle="bold"
                        android:layout_marginTop="35dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Total"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="200dp"
                        android:textStyle="bold"
                        android:layout_marginTop="35dp"
                        android:textColor="#000000"
                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1sp"
                    android:background="#39B54A" />
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reference"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/25"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"
                        />

                    <EditText
                        android:id="@+id/edt_note"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Tap to add a note"
                        android:layout_marginTop="30dp"
                        android:background="@null"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1sp"
                    android:background="#39B54A" />
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_password"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        />


                    <EditText
                        android:id="@+id/edt_pin"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:hint="Enter Pin"
                        android:layout_marginTop="14dp"
                        android:background="@null"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:layout_centerHorizontal="true"
                        android:inputType="numberPassword"
                        />
                    <ImageView
                        android:id="@+id/imgv_send_p2p"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_arrow_forward"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        />

                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
