<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patientmaincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#39B54A"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="planet.it.limited.tcashapp.activity.TCashHomeActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_tcash_home"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#39B54A"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                >
                <ImageView
                    android:id="@+id/imgv_main_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/trust_logo_icon"


                    />

                <TextView
                    android:id="@+id/txv_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-Cash Home"
                    android:textSize="20dp"
                    android:textColor="#000000"
                     android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_notification"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="05dp"
            android:src="@drawable/ic_user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Mr. XYZ"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:background="@drawable/button_oval"
             android:layout_marginTop="40dp"
            android:layout_marginLeft="95dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_taka"
                android:layout_marginLeft="07dp"
                />
            <Button
                android:id="@+id/btn_show_blance"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:text="Tap For Balance"
                android:background="@null"
                android:textColor="@color/md_purple_A400"

                />
            <TextView
                android:id="@+id/txv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:layout_marginLeft="50dp"
                android:textSize="18dp"
                android:visibility="gone"
                />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="05dp"
        android:background="#fff"
        >
    <GridView
        android:id="@+id/btn_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"

        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"
        android:layout_marginTop="0dp"

        >

    </GridView>
    </RelativeLayout>

</LinearLayout>
